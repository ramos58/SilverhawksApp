<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Pessoa para contato"
                android:textColor="@color/black_silverhawks"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_contactname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Nome:"
                android:textColor="@color/black_silverhawks"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_titulo" />

            <EditText
                android:id="@+id/et_contactnameview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:gravity="left"
                android:inputType="text"
                android:text="                           "
                android:textColor="@color/black_silverhawks"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_contactname"
                app:layout_constraintStart_toEndOf="@id/tv_contactname"
                app:layout_constraintTop_toTopOf="@id/tv_contactname" />

            <TextView
                android:id="@+id/tv_contactconnection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Parentesco:"
                android:textColor="@color/black_silverhawks"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_contactnameview" />

            <EditText
                android:id="@+id/et_contactconnectionview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:gravity="left"
                android:inputType="text"
                android:text="                           "
                android:textColor="@color/black_silverhawks"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_contactconnection"
                app:layout_constraintStart_toEndOf="@id/tv_contactconnection"
                app:layout_constraintTop_toTopOf="@id/tv_contactconnection" />

            <TextView
                android:id="@+id/tv_contactnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Número da carteira:"
                android:textColor="@color/black_silverhawks"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_contactconnectionview" />

            <EditText
                android:id="@+id/et_contactnumberview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:gravity="left"
                android:inputType="text"
                android:text="                           "
                android:textColor="@color/black_silverhawks"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_contactnumber"
                app:layout_constraintStart_toEndOf="@id/tv_contactnumber"
                app:layout_constraintTop_toTopOf="@id/tv_contactnumber" />

            <TextView
                android:id="@+id/tv_contactnumber2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Número da carteira:"
                android:textColor="@color/black_silverhawks"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_contactconnectionview" />

            <EditText
                android:id="@+id/et_contactnumberview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:gravity="left"
                android:inputType="text"
                android:text="                           "
                android:textColor="@color/black_silverhawks"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_contactnumber2"
                app:layout_constraintStart_toEndOf="@id/tv_contactnumber2"
                app:layout_constraintTop_toTopOf="@id/tv_contactnumber2" />


        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>